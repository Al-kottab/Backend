{
  "compilerOptions": {
    "rootDir": "src",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "strictNullChecks": true
  },
  "include": ["**/*.service.ts"],
  "exclude": [
    // "node_modules",
    //"**/__mocks__/*.service.ts"
    // "**/*.mocks.ts",
    // "**/*.schema.ts",
    // "**/*.dto.ts",
    // "**/*.spec.ts"
  ]
}
